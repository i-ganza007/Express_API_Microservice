generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_URL_STRING")
}

model User{
  id String @id @default(uuid())
  name String 
  username String @unique 
  password String 
  email String @unique 
  phoneNumber String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  board Board[]
}

model Board{
  id String @id @default(uuid())
  name String
  description String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  user User[]
  task Task[]
}

model Task{
  id String @id @default(uuid())
  name String
  description String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  deadline DateTime? 
  boardId String 
  board Board @relation(references:[id] ,fields: [boardId])
  subtasks SubTask[]
}

model SubTask{
  id String @id @default(uuid())
  name String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  taskId String
  tasks Task @relation(fields: [taskId],references: [id])
}
